@functions {
    private string GetPriorityBorder(TaskPriority priority)
    {
        return priority switch
        {
            TaskPriority.High => "border-red-500",
            TaskPriority.Medium => "border-yellow-500",
            TaskPriority.Low => "border-green-500",
            _ => "border-gray-500"
        };
    }

    private string GetPriorityBadge(TaskPriority priority)
    {
        return priority switch
        {
            TaskPriority.High => "bg-red-900 text-red-200 border-red-700",
            TaskPriority.Medium => "bg-yellow-900 text-yellow-200 border-yellow-700",
            TaskPriority.Low => "bg-green-900 text-green-200 border-green-700",
            _ => "bg-gray-700 text-gray-300 border-gray-600"
        };
    }
} *@