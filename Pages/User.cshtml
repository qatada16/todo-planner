@* @page "/User/{userId}"
@using TaskStatus = todo_planner.Models.TaskStatus;
@using TaskPriority = todo_planner.Models.TaskPriority;
@using todo_planner.Models
@model todo_planner.Pages.UserModel
@{
    // safe title when CurrentUser could be null
    var titleName = Model.CurrentUser?.Name ?? "User";
    ViewData["Title"] = $"{titleName}'s Dashboard";
}

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="mb-8">
        <div class="flex justify-between items-center">
            <div>
                <h1 class="text-3xl font-bold text-gray-800">Welcome, @(Model.CurrentUser?.Name ?? "User")!</h1>
                <p class="text-gray-600 mt-2">Manage your tasks efficiently</p>
            </div>
            <div class="flex items-center space-x-4">
                <span class="text-gray-600">User ID: @(Model.CurrentUser?.Id ?? 0)</span>
                <form method="post" asp-page="/Login" asp-page-handler="Logout">
                    <button type="submit"
                            class="bg-red-600 hover:bg-red-700 text-white font-semibold py-2 px-4 rounded-lg transition duration-200">
                        <i class="fas fa-sign-out-alt mr-2"></i>Logout
                    </button>
                </form>
            </div>
        </div>
    </div>

    <!-- Stats Cards -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
        <div class="rounded-xl shadow-lg p-6 border-l-4 border-blue-500">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-gray-600 text-sm">Total Tasks</p>
                    <p class="text-3xl font-bold text-gray-800">@(Model.Tasks.Count + Model.CompletedTasks.Count)</p>
                </div>
                <i class="fas fa-tasks text-blue-500 text-2xl"></i>
            </div>
        </div>

        <div class="bg-white rounded-xl shadow-lg p-6 border-l-4 border-green-500">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-gray-600 text-sm">Completed</p>
                    <p class="text-3xl font-bold text-gray-800">@Model.CompletedTasks.Count</p>
                </div>
                <i class="fas fa-check-circle text-green-500 text-2xl"></i>
            </div>
        </div>

        <div class="bg-white rounded-xl shadow-lg p-6 border-l-4 border-yellow-500">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-gray-600 text-sm">High Priority</p>
                    <p class="text-3xl font-bold text-gray-800">@Model.HighPriorityTasks.Count</p>
                </div>
                <i class="fas fa-exclamation-triangle text-yellow-500 text-2xl"></i>
            </div>
        </div>

        <div class="bg-white rounded-xl shadow-lg p-6 border-l-4 border-red-500">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-gray-600 text-sm">Due Today</p>
                    <p class="text-3xl font-bold text-gray-800">@Model.DueTodayTasks.Count</p>
                </div>
                <i class="fas fa-calendar-day text-red-500 text-2xl"></i>
            </div>
        </div>
    </div>

    <!-- Main Content -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <!-- Add Task Form -->
        <div class="lg:col-span-1">
            <div class="bg-white rounded-xl shadow-lg p-6 sticky top-6">
                <h2 class="text-2xl font-bold text-gray-800 mb-6">Add New Task</h2>

                <form method="post" asp-page-handler="AddTask" class="space-y-4">
                    <input type="hidden" name="userId" value="@Model.CurrentUser!.Id" />

                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Task Title</label>
                        <input type="text" asp-for="NewTask.Title"
                               class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                               placeholder="What needs to be done?" required>
                        <span asp-validation-for="NewTask.Title" class="text-red-600 text-sm"></span>
                    </div>

                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Description</label>
                        <textarea asp-for="NewTask.Description"
                                  class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                                  rows="3" placeholder="Add details..."></textarea>
                    </div>

                    <div class="grid grid-cols-2 gap-4">
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-2">Due Date</label>
                            <input type="date" asp-for="NewTask.DueDate"
                                   class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-2">Priority</label>
                            <select asp-for="NewTask.Priority"
                                    class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                                <option value="Low">⭐ Low</option>
                                <option value="Medium">⭐⭐ Medium</option>
                                <option value="High">⭐⭐⭐ High</option>
                            </select>
                        </div>
                    </div>

                    <button type="submit"
                            class="w-full bg-blue-600 hover:bg-blue-700 text-white font-semibold py-3 px-6 rounded-lg transition duration-200 transform hover:scale-105">
                        <i class="fas fa-plus mr-2"></i>Add Task
                    </button>
                </form>
            </div>
        </div>

        <!-- Tasks List -->
        <div class="lg:col-span-2">
            <!-- Filter Tabs -->
            <div class="bg-white rounded-xl shadow-lg p-6 mb-6">
                <div class="flex space-x-4 border-b border-gray-200">
                    <a href="@Url.Page("/User", new { userId = Model.CurrentUser!.Id, filter = "all" })"
                       class="@(Model.CurrentFilter == "all" ? "border-b-2 border-blue-500 text-blue-600" : "text-gray-600") pb-4 px-4 font-medium">
                        All Tasks (@(Model.Tasks.Count + Model.CompletedTasks.Count))
                    </a>
                    <a href="@Url.Page("/User", new { userId = Model.CurrentUser.Id, filter = "active" })"
                       class="@(Model.CurrentFilter == "active" ? "border-b-2 border-blue-500 text-blue-600" : "text-gray-600") pb-4 px-4 font-medium">
                        Active (@Model.Tasks.Count)
                    </a>
                    <a href="@Url.Page("/User", new { userId = Model.CurrentUser!.Id, filter = "completed" })"
                       class="@(Model.CurrentFilter == "completed" ? "border-b-2 border-blue-500 text-blue-600" : "text-gray-600") pb-4 px-4 font-medium">
                        Completed (@Model.CompletedTasks.Count)
                    </a>
                    <a href="@Url.Page("/User", new { userId = Model.CurrentUser!.Id, filter = "high" })"
                       class="@(Model.CurrentFilter == "high" ? "border-b-2 border-blue-500 text-blue-600" : "text-gray-600") pb-4 px-4 font-medium">
                        High Priority (@Model.HighPriorityTasks.Count)
                    </a>
                </div>
            </div>

            <!-- Tasks Grid -->
            <div class="space-y-4">
                @{
                    var tasksToShow = Model.CurrentFilter switch
                    {
                        "active" => Model.Tasks,
                        "completed" => Model.CompletedTasks,
                        "high" => Model.HighPriorityTasks,
                        _ => Model.Tasks.Concat(Model.CompletedTasks).ToList()
                    };
                }

                @foreach (var task in tasksToShow)
                {
                    <div class="bg-white rounded-xl shadow-md p-6 border-l-4 @GetPriorityBorder(task.Priority) @(task.Status == TaskStatus.Completed ? "opacity-75" : "")">
                        <div class="flex justify-between items-start">
                            <div class="flex-1">
                                <div class="flex items-center space-x-3 mb-2">
                                    <h3 class="text-lg font-semibold text-gray-800 @(task.Status == TaskStatus.Completed ? "line-through" : "")">@task.Title</h3>
                                    <span class="px-2 py-1 @GetPriorityBadge(task.Priority) text-xs rounded-full font-medium">
                                        @task.Priority
                                    </span>
                                    @if (task.DueDate.Date == DateTime.Today)
                                    {
                                        <span class="px-2 py-1 bg-red-100 text-red-800 text-xs rounded-full font-medium">
                                            Due Today!
                                        </span>
                                    }
                                    else if (task.DueDate.Date < DateTime.Today && task.Status != TaskStatus.Completed)
                                    {
                                        <span class="px-2 py-1 bg-red-100 text-red-800 text-xs rounded-full font-medium">
                                            Overdue
                                        </span>
                                    }
                                </div>

                                @if (!string.IsNullOrEmpty(task.Description))
                                {
                                    <p class="text-gray-600 mb-3">@task.Description</p>
                                }

                                <div class="flex items-center space-x-4 text-sm text-gray-500">
                                    <span><i class="fas fa-calendar mr-1"></i>Due: @task.DueDate.ToString("MMM dd, yyyy")</span>
                                    <span><i class="fas fa-flag mr-1"></i>@task.Priority Priority</span>
                                    <span><i class="fas fa-circle mr-1"></i>@task.Status</span>
                                </div>
                            </div>

                            <div class="flex items-center space-x-2 ml-4">
                                @if (task.Status != TaskStatus.Completed)
                                {
                                    <form method="post" asp-page-handler="UpdateStatus">
                                        <input type="hidden" name="userId" value="@Model.CurrentUser.Id" />
                                        <input type="hidden" name="taskId" value="@task.Id" />
                                        <input type="hidden" name="status" value="Completed" />
                                        <button type="submit"
                                                class="bg-green-600 hover:bg-green-700 text-white p-2 rounded-lg transition duration-200"
                                                title="Mark Complete">
                                            <i class="fas fa-check"></i>
                                        </button>
                                    </form>
                                }

                                <form method="post" asp-page-handler="DeleteTask"
                                      onsubmit="return confirm('Are you sure you want to delete this task?');">
                                    <input type="hidden" name="userId" value="@Model.CurrentUser.Id" />
                                    <input type="hidden" name="taskId" value="@task.Id" />
                                    <button type="submit"
                                            class="bg-red-600 hover:bg-red-700 text-white p-2 rounded-lg transition duration-200"
                                            title="Delete Task">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                }

                @if (!tasksToShow.Any())
                {
                    <div class="bg-white rounded-xl shadow-md p-12 text-center">
                        <i class="fas fa-check-circle text-green-500 text-5xl mb-4"></i>
                        <h3 class="text-xl font-semibold text-gray-800 mb-2">No tasks found</h3>
                        <p class="text-gray-600">@(Model.CurrentFilter == "completed" ? "No completed tasks yet!" : "Add your first task to get started!")</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<div id="editTaskModal" class="fixed inset-0 bg-black bg-opacity-50 items-center justify-center hidden">
    <div class="bg-white rounded-lg shadow-lg p-6 w-full max-w-md">
        <h2 class="text-xl font-bold mb-4">Edit Task</h2>
        <form method="post" asp-page-handler="EditTask">
            <input type="hidden" id="editTaskId" name="TaskId" />
            <input type="hidden" id="editUserId" name="UserId" value="@Model.CurrentUser.Id" />

            <div class="mb-4">
                <label class="block text-sm font-medium text-gray-700">Title</label>
                <input type="text" id="editTaskTitle" name="Title" class="w-full px-4 py-2 border rounded-lg" required />
            </div>

            <div class="mb-4">
                <label class="block text-sm font-medium text-gray-700">Description</label>
                <textarea id="editTaskDescription" name="Description" class="w-full px-4 py-2 border rounded-lg"></textarea>
            </div>

            <div class="mb-4">
                <label class="block text-sm font-medium text-gray-700">Due Date</label>
                <input type="date" id="editTaskDueDate" name="DueDate" class="w-full px-4 py-2 border rounded-lg" required />
            </div>

            <div class="mb-4">
                <label class="block text-sm font-medium text-gray-700">Priority</label>
                <select id="editTaskPriority" name="Priority" class="w-full px-4 py-2 border rounded-lg">
                    <option value="Low">Low</option>
                    <option value="Medium">Medium</option>
                    <option value="High">High</option>
                </select>
            </div>

            <div class="mb-4">
                <label class="block text-sm font-medium text-gray-700">Status</label>
                <select id="editTaskStatus" name="Status" class="w-full px-4 py-2 border rounded-lg">
                    <option value="Pending">Pending</option>
                    <option value="InProgress">In Progress</option>
                    <option value="Completed">Completed</option>
                </select>
            </div>

            <div class="flex justify-end space-x-4">
                <button type="button" class="bg-gray-300 hover:bg-gray-400 text-gray-800 px-4 py-2 rounded-lg" onclick="closeEditPopup()">Cancel</button>
                <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg">Save</button>
            </div>
        </form>
    </div>
</div>

@functions {
    private string GetPriorityBorder(TaskPriority priority)
    {
        return priority switch
        {
            TaskPriority.High => "border-red-500",
            TaskPriority.Medium => "border-yellow-500",
            TaskPriority.Low => "border-green-500",
            _ => "border-gray-500"
        };
    }

    private string GetPriorityBadge(TaskPriority priority)
    {
        return priority switch
        {
            TaskPriority.High => "bg-red-100 text-red-800",
            TaskPriority.Medium => "bg-yellow-100 text-yellow-800",
            TaskPriority.Low => "bg-green-100 text-green-800",
            _ => "bg-gray-100 text-gray-800"
        };
    }
} *@


