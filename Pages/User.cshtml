                                        <span><i class="fas fa-flag mr-1"></i>@task.Priority Priority</span>
                                        <span><i class="fas fa-circle mr-1"></i>@task.Status</span>
                                    </div>
                                </div>

                                <div class="flex items-center space-x-2 ml-4">
                                    @if (task.Status != TaskStatus.Completed)
                                    {
                                        <form method="post" asp-page-handler="UpdateStatus">
                                            <input type="hidden" name="userId" value="@Model.CurrentUser.Id" />
                                            <input type="hidden" name="taskId" value="@task.Id" />
                                            <input type="hidden" name="status" value="Completed" />
                                            <button type="submit"
                                                    class="bg-emerald-600 hover:bg-emerald-700 text-white p-2 rounded-lg transition duration-200 transform hover:scale-110 hover:shadow-lg hover:shadow-emerald-500/30"
                                                    title="Mark Complete">
                                                <i class="fas fa-check"></i>
                                            </button>
                                        </form>

                                        <!-- Edit Button -->
                                        <button type="button"
                                                class="bg-blue-600 hover:bg-blue-700 text-white p-2 rounded-lg transition duration-200 transform hover:scale-110 hover:shadow-lg hover:shadow-blue-500/30"
                                                title="Edit Task"
                                                onclick="openEditPopup(@task.Id, '@task.Title', '@task.Description', '@task.DueDate.ToString("yyyy-MM-dd")', '@task.Priority', '@task.Status')">
                                            <i class="fas fa-edit"></i>
                                        </button>
                                    }

                                    <form method="post" asp-page-handler="DeleteTask"
                                          onsubmit="return confirm('Are you sure you want to delete this task?');">
                                        <input type="hidden" name="userId" value="@Model.CurrentUser.Id" />
                                        <input type="hidden" name="taskId" value="@task.Id" />
                                        <button type="button"
                                                class="bg-red-600 hover:bg-red-700 text-white p-2 rounded-lg transition duration-200 transform hover:scale-110 hover:shadow-lg hover:shadow-red-500/30"
                                                title="Delete Task"
                                                onclick="openDeletePopup(@task.Id)">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    }

                    @if (!tasksToShow.Any())
                    {
                        <div class="bg-gradient-to-br from-dark-700 via-dark-600 to-dark-700 rounded-xl shadow-2xl shadow-black/30 p-12 text-center border border-dark-600">
                            <i class="fas fa-check-circle text-vibrant-teal text-5xl mb-4"></i>
                            <h3 class="text-xl font-semibold text-dark-200 mb-2">No tasks found</h3>
                            <p class="text-dark-400">@(Model.CurrentFilter == "completed" ? "No completed tasks yet!" : "Add your first task to get started!")</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<div id="editTaskModal" class="fixed inset-0 bg-black bg-opacity-50 items-center flex justify-center hidden overflow-y-auto">
    <div class="bg-gradient-to-br from-dark-700 via-dark-600 to-dark-700 rounded-xl shadow-2xl shadow-black/30 px-6 py-2 w-full max-w-md border border-dark-600">
        <h2 class="text-2xl font-bold text-dark-200 mb-6">Edit Task</h2>
        <form method="post" asp-page-handler="EditTask" class="space-y-4">
            <input type="hidden" id="editTaskId" name="TaskId" />
            <input type="hidden" id="editUserId" name="UserId" value="@Model.CurrentUser.Id" />

            <div>
                <label class="block text-sm font-medium text-dark-300 mb-2">Title</label>
                <input type="text" id="editTaskTitle" name="Title"
                       class="w-full px-4 py-3 bg-dark-800 border border-dark-600 rounded-lg text-dark-200 placeholder-dark-500 focus:ring-2 focus:ring-electric-blue focus:border-transparent transition duration-200"
                       required />
            </div>

            <div>
                <label class="block text-sm font-medium text-dark-300 mb-2">Description</label>
                <textarea id="editTaskDescription" name="Description"
                          class="w-full px-4 py-3 bg-dark-800 border border-dark-600 rounded-lg text-dark-200 placeholder-dark-500 focus:ring-2 focus:ring-electric-blue focus:border-transparent transition duration-200"
                          rows="3"></textarea>
            </div>

            <!-- Due Date and Priority in the same row -->
            <div class="grid grid-cols-2 gap-4">
                <div>
                    <label class="block text-sm font-medium text-dark-300 mb-2">Due Date</label>
                    <input type="date" id="editTaskDueDate" name="DueDate"
                           class="w-full px-4 py-3 bg-dark-800 border border-dark-600 rounded-lg text-dark-200 focus:ring-2 focus:ring-electric-blue focus:border-transparent transition duration-200"
                           required />
                </div>
                <div>
                    <label class="block text-sm font-medium text-dark-300 mb-2">Priority</label>
                    <select id="editTaskPriority" name="Priority"
                            class="w-full px-3 py-3 bg-dark-800 border border-dark-600 rounded-lg text-dark-200 focus:ring-2 focus:ring-electric-blue focus:border-transparent transition duration-200">
                        <option value="Low">⭐ Low</option>
                        <option value="Medium">⭐⭐ Medium</option>
                        <option value="High">⭐⭐⭐ High</option>
                    </select>
                </div>
            </div>

            <div>
                <label class="block text-sm font-medium text-dark-300 mb-2">Status</label>
                <select id="editTaskStatus" name="Status"
                        class="w-full px-3 py-3 bg-dark-800 border border-dark-600 rounded-lg text-dark-200 focus:ring-2 focus:ring-electric-blue focus:border-transparent transition duration-200">
                    <option value="Pending">Pending</option>
                    <option value="InProgress">In Progress</option>
                    <option value="Completed">Completed</option>
                </select>
            </div>

            <div class="flex justify-end space-x-4">
                <button type="button"
                        class="bg-gray-300 hover:bg-gray-400 text-gray-800 px-4 py-2 rounded-lg"
                        onclick="closeEditPopup()">Cancel</button>
                <button type="submit"
                        class="bg-electric-blue hover:bg-royal-blue text-white px-4 py-2 rounded-lg transition duration-200 transform hover:scale-105 hover:shadow-lg hover:shadow-electric-blue/30">
                    Save
                </button>
            </div>
        </form>
    </div>
</div>

<div id="deleteTaskModal" class="fixed inset-0 bg-black bg-opacity-50 items-center flex justify-center hidden overflow-y-auto">
    <div class="bg-gradient-to-br from-dark-700 via-dark-600 to-dark-700 rounded-xl shadow-2xl shadow-black/30 px-6 py-6 w-full max-w-md border border-dark-600">
        <h2 class="text-2xl font-bold text-dark-200 mb-6">Delete Task</h2>
        <p class="text-dark-400 mb-6">Are you sure you want to delete this task? This action cannot be undone.</p>
        <form method="post" asp-page-handler="DeleteTask">
            <input type="hidden" id="deleteTaskId" name="TaskId" />
            <input type="hidden" id="deleteUserId" name="UserId" value="@Model.CurrentUser.Id" />

            <div class="flex justify-end space-x-4">
                <button type="button"
                        class="bg-gray-300 hover:bg-gray-400 text-gray-800 px-4 py-2 rounded-lg"
                        onclick="closeDeletePopup()">Cancel</button>
                <button type="submit"
                        class="bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded-lg transition duration-200 transform hover:scale-105 hover:shadow-lg hover:shadow-red-500/30">
                    Delete
                </button>
            </div>
        </form>
    </div>
</div>

<script>
    function openEditPopup(taskId, title, description, dueDate, priority, status) {
        document.getElementById('editTaskId').value = taskId;
        document.getElementById('editTaskTitle').value = title;
        document.getElementById('editTaskDescription').value = description || "";
        document.getElementById('editTaskDueDate').value = dueDate;
        document.getElementById('editTaskPriority').value = priority;
        document.getElementById('editTaskStatus').value = status;

        document.getElementById('editTaskModal').classList.remove('hidden');
    }

    function closeEditPopup() {
        document.getElementById('editTaskModal').classList.add('hidden');
    }

    function openDeletePopup(taskId) {
        // Set the task ID in the hidden input field
        document.getElementById('deleteTaskId').value = taskId;

        // Show the delete confirmation popup
        document.getElementById('deleteTaskModal').classList.remove('hidden');
    }

    function closeDeletePopup() {
        // Hide the delete confirmation popup
        document.getElementById('deleteTaskModal').classList.add('hidden');
    }
</script>

@functions {
    private string GetPriorityBorder(TaskPriority priority)
    {
        return priority switch
        {
            TaskPriority.High => "border-red-500",
            TaskPriority.Medium => "border-amber-500",
            TaskPriority.Low => "border-emerald-600",
            _ => "border-dark-600"
        };
    }

    private string GetPriorityBadge(TaskPriority priority)
    {
        return priority switch
        {
            TaskPriority.High => "bg-red-500/20 border border-red-500 text-red-300",
            TaskPriority.Medium => "bg-amber-500/20 border border-amber-500 text-amber-300",
            TaskPriority.Low => "bg-emerald-500/20 border border-emerald-500 text-emerald-300",
            _ => "bg-dark-600 text-dark-300"
        };
    }
}