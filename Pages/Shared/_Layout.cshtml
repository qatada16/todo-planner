<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Smart Todo Planner</title>
    <link rel="stylesheet" href="~/css/output.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
</head>
<body class="bg-gradient-to-br from-blue-50 to-green-50 min-h-screen">
    <header>
        <nav class="bg-white shadow-lg border-b">
            <div class="container mx-auto px-4 py-4">
                <div class="flex justify-between items-center">
                    <div class="flex items-center space-x-3">
                        <div class="bg-todo-primary rounded-lg p-2">
                            <i class="fas fa-tasks text-white text-xl"></i>
                        </div>
                        <h1 class="text-2xl font-bold text-gray-800">Smart Todo Planner</h1>
                    </div>
                    <div class="space-x-4">
                        <a class="text-gray-600 hover:text-todo-primary transition" asp-page="/Index">
                            <i class="fas fa-home mr-1"></i>Dashboard
                        </a>
                        <a class="text-gray-600 hover:text-todo-primary transition" asp-page="/Admin/Users">
                            <i class="fas fa-users mr-1"></i>Manage Users
                        </a>
                        <a class="text-gray-600 hover:text-todo-primary transition" asp-page="/Tasks/Index">
                            <i class="fas fa-list-check mr-1"></i>All Tasks
                        </a>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <main class="container mx-auto px-4 py-8">
        @RenderBody()
    </main>

    <footer class="bg-white border-t mt-12">
        <div class="container mx-auto px-4 py-6 text-center text-gray-600">
            <i class="fas fa-brain text-todo-primary mr-2"></i>
            &copy; 2024 - Smart Todo Planner - Stay Productive!
        </div>
    </footer>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>