<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Smart Todo Planner</title>
    <link rel="stylesheet" href="~/css/output.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
</head>
<body class="bg-gradient-to-br from-blue-800 to-green-800 min-h-screen flex items-center justify-center p-4">
    <div class="w-full bg-gradient-to-br max-w-md">
        <!-- Logo -->
        <div class="text-center mb-8">
            <div class="bg-blue-600 rounded-xl p-4 inline-block shadow-lg">
                <i class="fas fa-tasks text-white text-3xl"></i>
            </div>
            <h1 class="text-3xl font-bold text-gray-800 mt-4">Smart Todo Planner</h1>
            <p class="text-gray-600 mt-2">Stay organized and productive</p>
        </div>

        <!-- Content -->
        <div class="bg-gray-900 rounded-2xl shadow-xl p-8 border border-gray-950">
            @RenderBody()
        </div>

        <!-- Footer -->
        <div class="text-center mt-6 text-gray-500 text-sm">
            <p>&copy; 2025 - Smart Todo Planner</p>
        </div>
    </div>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>