    <form method="post" class="space-y-4">
        <!-- Name -->
        <div>
            <label class="block text-sm font-medium text-dark-400 mb-2">Full Name</label>
            <input type="text" asp-for="Name" 
                   class="w-full px-4 py-3 border border-dark-600 rounded-lg bg-dark-700 text-dark-200 focus:ring-2 focus:ring-electric-blue focus:border-transparent" 
                   placeholder="Enter your full name" required>
            <span asp-validation-for="Name" class="text-red-500 text-sm"></span>
        </div>

        <!-- Email -->
        <div>
            <label class="block text-sm font-medium text-dark-400 mb-2">Email Address</label>
            <input type="email" asp-for="Email" 
                   class="w-full px-4 py-3 border border-dark-600 rounded-lg bg-dark-700 text-dark-200 focus:ring-2 focus:ring-electric-blue focus:border-transparent" 
                   placeholder="Enter your email" required>
            <span asp-validation-for="Email" class="text-red-500 text-sm"></span>
        </div>

        <!-- Password -->
        <div>
            <label class="block text-sm font-medium text-dark-400 mb-2">Password</label>
            <input type="password" asp-for="Password" 
                   class="w-full px-4 py-3 border border-dark-600 rounded-lg bg-dark-700 text-dark-200 focus:ring-2 focus:ring-electric-blue focus:border-transparent" 
                   placeholder="Enter your password" required>
            <span asp-validation-for="Password" class="text-red-500 text-sm"></span>
        </div>

        <!-- Confirm Password -->
        <div>
            <label class="block text-sm font-medium text-dark-400 mb-2">Confirm Password</label>
            <input type="password" asp-for="ConfirmPassword" 
                   class="w-full px-4 py-3 border border-dark-600 rounded-lg bg-dark-700 text-dark-200 focus:ring-2 focus:ring-electric-blue focus:border-transparent" 
                   placeholder="Confirm your password" required>
            <span asp-validation-for="ConfirmPassword" class="text-red-500 text-sm"></span>
        </div>

        <!-- Error Message -->
        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="bg-red-500/20 border border-red-500 text-red-300 px-4 py-3 rounded-lg text-sm shadow-lg shadow-red-500/20">
                <i class="fas fa-exclamation-circle mr-2"></i>@Model.ErrorMessage
            </div>
        }

        <!-- Success Message -->
        @if (!string.IsNullOrEmpty(Model.SuccessMessage))
        {
            <div class="bg-emerald-500/20 border border-emerald-500 text-emerald-300 px-4 py-3 rounded-lg text-sm shadow-lg shadow-emerald-500/20">
                <i class="fas fa-check-circle mr-2"></i>@Model.SuccessMessage
            </div>
        }

        <!-- Submit Button -->
        <button type="submit" 
                class="w-full bg-vibrant-teal hover:bg-emerald text-white font-semibold py-3 px-6 rounded-lg transition duration-200 transform hover:scale-105 shadow-lg shadow-vibrant-teal/30">
            <i class="fas fa-user-plus mr-2"></i>Create Account
        </button>
    </form>

    <!-- Login Link -->
    <div class="text-center mt-6 pt-6 border-t border-dark-600">
        <p class="text-dark-400">Already have an account?</p>
        <a asp-page="/Login" class="text-electric-blue hover:text-royal-blue font-medium transition duration-200">Sign in here</a>
    </div>
</div>
