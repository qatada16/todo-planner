@page
@model todo_planner.Pages.RegisterModel
@{
    ViewData["Title"] = "Register";
    Layout = "_AuthLayout";
}

<h2 class="text-2xl font-bold text-gray-800 text-center mb-6">Create Account</h2>

<form method="post" class="space-y-4">
    <!-- Name -->
    <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">Full Name</label>
        <input type="text" asp-for="Name" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" placeholder="Enter your full name" required>
        <span asp-validation-for="Name" class="text-red-600 text-sm"></span>
    </div>

    <!-- Email -->
    <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">Email Address</label>
        <input type="email" asp-for="Email" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" placeholder="Enter your email" required>
        <span asp-validation-for="Email" class="text-red-600 text-sm"></span>
    </div>

    <!-- Password -->
    <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">Password</label>
        <input type="password" asp-for="Password" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" placeholder="Enter your password" required>
        <span asp-validation-for="Password" class="text-red-600 text-sm"></span>
    </div>

    <!-- Confirm Password -->
    <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">Confirm Password</label>
        <input type="password" asp-for="ConfirmPassword" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" placeholder="Confirm your password" required>
        <span asp-validation-for="ConfirmPassword" class="text-red-600 text-sm"></span>
    </div>

    <!-- Error Message -->
    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="bg-red-50 border border-red-200 text-red-600 px-4 py-3 rounded-lg text-sm">
            <i class="fas fa-exclamation-circle mr-2"></i>@Model.ErrorMessage
        </div>
    }

    <!-- Success Message -->
    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
    {
        <div class="bg-green-50 border border-green-200 text-green-600 px-4 py-3 rounded-lg text-sm">
            <i class="fas fa-check-circle mr-2"></i>@Model.SuccessMessage
        </div>
    }

    <!-- Submit Button -->
    <button type="submit" class="w-full bg-green-600 hover:bg-green-700 text-white font-semibold py-3 px-6 rounded-lg transition duration-200 transform hover:scale-105">
        <i class="fas fa-user-plus mr-2"></i>Create Account
    </button>
</form>

<!-- Login Link -->
<div class="text-center mt-6 pt-6 border-t border-gray-200">
    <p class="text-gray-600">Already have an account?</p>
    <a asp-page="/Login" class="text-blue-600 hover:text-blue-700 font-medium">Sign in here</a>
</div>