@page
@model todo_planner.PresentationL.Pages.LoginModel
@{
    ViewData["Title"] = "Login";
    Layout = "_AuthLayout";
}




<style>
    body {
        background-image: url('/images/background.jpg'); /* Correct path */
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
    }
</style>
<div class="space-y-6 bg-gradient-to-br from-dark-900 via-dark-800 to-dark-700 p-8 rounded-2xl shadow-2xl shadow-black/30">
    <div class="text-center">
        <h2 class="text-2xl font-bold text-dark-300">Welcome Back</h2>
        <p class="text-dark-400 mt-2">Sign in to your account</p>
    </div>

    <form method="post" class="space-y-4">
        <!-- Email -->
        <div>
            <label class="block text-sm font-medium text-dark-400 mb-2">Email Address</label>
            <div class="relative">
                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                    <i class="fas fa-envelope text-dark-500"></i>
                </div>
                <input type="email" asp-for="Email" 
                       class="pl-10 w-full px-4 py-3 border border-dark-600 rounded-lg bg-dark-700 text-dark-200 focus:ring-2 focus:ring-electric-blue focus:border-transparent transition duration-200" 
                       placeholder="Enter your email" required>
            </div>
            <span asp-validation-for="Email" class="text-red-500 text-sm mt-1 block"></span>
        </div>

        <!-- Password -->
        <div>
            <label class="block text-sm font-medium text-dark-400 mb-2">Password</label>
            <div class="relative">
                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                    <i class="fas fa-lock text-dark-500"></i>
                </div>
                <input type="password" asp-for="Password" 
                       class="pl-10 w-full px-4 py-3 border border-dark-600 rounded-lg bg-dark-700 text-dark-200 focus:ring-2 focus:ring-electric-blue focus:border-transparent transition duration-200" 
                       placeholder="Enter your password" required>
            </div>
            <span asp-validation-for="Password" class="text-red-500 text-sm mt-1 block"></span>
        </div>

        <!-- Error Message -->
        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="bg-red-500/20 border border-red-500 text-red-300 px-4 py-3 rounded-lg flex items-center shadow-lg shadow-red-500/20">
                <i class="fas fa-exclamation-circle mr-3"></i>
                <span>@Model.ErrorMessage</span>
            </div>
        }

        <!-- Submit Button -->
        <button type="submit" 
                class="w-full bg-electric-blue hover:bg-royal-blue text-white font-semibold py-3 px-6 rounded-lg transition duration-200 transform hover:scale-[1.02] shadow-lg shadow-electric-blue/30">
            <i class="fas fa-sign-in-alt mr-2"></i>Sign In
        </button>
    </form>

    <!-- Register Link -->
    <div class="text-center pt-6 border-t border-dark-600">
        <p class="text-dark-400">Don't have an account?</p>
        <a asp-page="/Register" class="text-electric-blue hover:text-royal-blue font-medium transition duration-200 inline-block mt-2">
            Create account here <i class="fas fa-arrow-right ml-1"></i>
        </a>
    </div>
</div>
