@model todo_planner.PresentationL.Pages.UserModel

<div id="editTaskModal" class="fixed inset-0 bg-black bg-opacity-50 items-center flex justify-center hidden overflow-y-auto">
    <div class="bg-gradient-to-br from-dark-900 via-dark-800 to-dark-700 rounded-xl shadow-2xl shadow-black/30 px-6 py-2 w-full max-w-md border border-dark-600">
        <h2 class="text-2xl font-bold text-dark-300 mb-6">Edit Task</h2>
        <form method="post" asp-page-handler="EditTask" class="space-y-4">
            <input type="hidden" id="editTaskId" name="TaskId" />
            <input type="hidden" id="editUserId" name="UserId" value="@Model.CurrentUser?.Id" />

            <div>
                <label class="block text-sm font-medium text-dark-400 mb-2">Title</label>
                <input type="text" id="editTaskTitle" name="Title"
                       class="w-full px-4 py-3 bg-dark-800 border border-dark-600 rounded-lg text-dark-300 placeholder-dark-500 focus:ring-2 focus:ring-electric-blue focus:border-transparent transition duration-200"
                       required />
            </div>

            <div>
                <label class="block text-sm font-medium text-dark-400 mb-2">Description</label>
                <textarea id="editTaskDescription" name="Description"
                          class="w-full px-4 py-3 bg-dark-800 border border-dark-600 rounded-lg text-dark-300 placeholder-dark-500 focus:ring-2 focus:ring-electric-blue focus:border-transparent transition duration-200"
                          rows="3"></textarea>
            </div>

            <div class="grid grid-cols-2 gap-4">
                <div>
                    <label class="block text-sm font-medium text-dark-400 mb-2">Due Date</label>
                    <input type="date" id="editTaskDueDate" name="DueDate"
                           class="w-full px-4 py-3 bg-dark-800 border border-dark-600 rounded-lg text-dark-300 focus:ring-2 focus:ring-electric-blue focus:border-transparent transition duration-200"
                           required />
                </div>
                <div>
                    <label class="block text-sm font-medium text-dark-400 mb-2">Priority</label>
                    <select id="editTaskPriority" name="Priority"
                            class="w-full px-3 py-3 bg-dark-800 border border-dark-600 rounded-lg text-dark-300 focus:ring-2 focus:ring-electric-blue focus:border-transparent transition duration-200">
                        <option value="Low">⭐ Low</option>
                        <option value="Medium">⭐⭐ Medium</option>
                        <option value="High">⭐⭐⭐ High</option>
                    </select>
                </div>
            </div>

            <div>
                <label class="block text-sm font-medium text-dark-400 mb-2">Status</label>
                <select id="editTaskStatus" name="Status"
                        class="w-full px-3 py-3 bg-dark-800 border border-dark-600 rounded-lg text-dark-300 focus:ring-2 focus:ring-electric-blue focus:border-transparent transition duration-200">
                    <option value="Pending">Pending</option>
                    <option value="InProgress">In Progress</option>
                    <option value="Completed">Completed</option>
                </select>
            </div>

            <div class="flex justify-end space-x-4">
                <button type="button"
                        class="bg-gray-300 hover:bg-gray-400 text-gray-800 px-4 py-2 rounded-lg"
                        onclick="closeEditPopup()">Cancel</button>
                <button type="submit"
                        class="bg-electric-blue hover:bg-royal-blue text-white px-4 py-2 rounded-lg transition duration-200 transform hover:scale-105 hover:shadow-lg hover:shadow-electric-blue/30">
                    Save
                </button>
            </div>
        </form>
    </div>
</div>