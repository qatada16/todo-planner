<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Smart Todo Planner</title>
    <link rel="stylesheet" href="~/css/output.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <style>
        body {
            background-image: url('/images/background.jpg');
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            background-attachment: fixed;
        }
    </style>
</head>
<body class="bg-gradient-to-br from-blue-900 to-green-800 min-h-screen">
    <header>
        <nav class="bg-green shadow-lg border-b">
            <div class="container mx-auto px-4 py-4">
                <div class="flex justify-between items-center">
                    <div class="flex items-center space-x-3">
                        <div class="bg-todo-primary rounded-lg p-2">
                            <i class="fas fa-tasks text-white text-xl"></i>
                        </div>
                        <h1 class="text-2xl font-bold text-white">Smart Todo Planner</h1>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    @* <main class="bg-slate-600 shadow-lg container mx-auto px-2 py-8">
        @RenderBody()
    </main> *@
    <main>
        @RenderBody()
    </main>

    <footer class="bg-gradient-to-br from-blue-900 to-green-800 border-t mt-12">
        <div class="container mx-auto px-4 py-6 text-center text-white">
            <i class="fas fa-brain text-todo-primary mr-2"></i>
            &copy; 2025 - Smart Todo Planner - Stay Productive!
        </div>
    </footer>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>